#Rewrite everything to httpsRewriteEngine OnRewriteCond %{HTTPS} !=onRewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI}RewriteCond %{REQUEST_FILENAME} !-dRewriteCond %{REQUEST_FILENAME}.php -fRewriteRule ^(.*)$ $1.php# Return 404 if original request is .phpRewriteCond %{THE_REQUEST} "^[^ ]* .*?\.php[? ].*$"RewriteRule .* - [L,R=404]